generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MaleStock {
  id                    Int      @id @default(autoincrement())
  goatName              String
  purchaserInformation  String
  weight                Float
  height                Float
  entryDate             DateTime
  exitDate              DateTime?
  salesStatus           String
  maintenanceRecords    String?
  price                 Float
  description           String?
  uniqueIdentificationNumber String @unique
  photographUrl         String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model FemaleStock {
  id                    Int      @id @default(autoincrement())
  goatName              String
  purchaserInformation  String
  weight                Float
  height                Float
  entryDate             DateTime
  exitDate              DateTime?
  salesStatus           String
  maintenanceRecords    String?
  price                 Float
  description           String?
  uniqueIdentificationNumber String @unique
  photographUrl         String?
  mateDate              DateTime?
  pregnancyStatus       String?
  matingPartnerInformation String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model TradeStock {
  id                      Int      @id @default(autoincrement())
  goatName                String
  purchaserInformation    String
  customerDetails         String
  weight                  Float
  height                  Float
  entryDate               DateTime
  exitDate                DateTime?
  salesStatus             String
  maintenanceRecords      String?
  price                   Float
  description             String?
  uniqueIdentificationNumber String @unique
  photographUrl         String?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}